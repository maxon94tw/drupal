{#
/**
 * @file
 * Default theme implementation to display a two-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{% set classes = [
    'layout',
    'layout--sidebar',
] %}
{% if content %}
    <div{{ attributes.addClass(classes) }}>

        {% if content.first %}
            <div {{ region_attributes.first.addClass('layout__region', 'layout__region--first') }}>
                {{ content.first }}

                <div class="two--columns">
                    {% if content.first %}
                        <div {{ region_attributes.first_first.addClass('layout__region', 'layout__region--first--first') }}>
                            {{ content.first_first }}
                        </div>
                    {% endif %}

                    {% if content.first %}
                        <div {{ region_attributes.first_second.addClass('layout__region', 'layout__region--first--second') }}>
                            {{ content.first_second }}
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endif %}

        {% if content.second %}
            <div {{ region_attributes.second.addClass('layout__region', 'layout__region--second') }}>
                {{ content.second }}
            </div>
        {% endif %}
    </div>
{% endif %}